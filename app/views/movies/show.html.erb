<p id="notice"><%= notice %></p>

<div class="movie-show">
  <% unless @movie.user == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(movie_id: @movie.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
  <!--
  <#%= link_to 'Back', movies_path %>
  <#%= link_to 'New Comment', new_comment_path %>
  -->
</div>
<div>
<h1 class="movie-show"><%= video_tag(@movie.video, :controls => true, :loop => true, size: (55*10)) %></h1>
</div>
<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="blog-text">
    <br>
    <p><strong style="font-family: Pattaya; font-size: 35px; color: ##000000;">Title</strong></p>
    <p style="font-family: Pattaya; font-size: 35px; color: #f0ffff;"><%= @movie.title %></p>
    <!--
    <p><strong>内容</strong></p>
    <p><#%= @blog.content %></p>
    -->
  </div>
  <div id="comments_area">
  <!-- 投稿されたコメント一覧をブログの詳細ページに表示するためのrender -->
    <%= render partial: 'comments/index', locals: { comments: @comments, movie: @movie } %>
  </div>
  <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
  <%= render partial: 'comments/form', locals: { comment: @comment, movie: @movie } %>
<!--
  <#%= link_to '編集', edit_movie_path(@movie) %> |
  <#%= link_to '戻る', movies_path %>
  -->
</div>